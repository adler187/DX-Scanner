<% title 'Editing Time Interval' %>

<% form_for(@time_interval) do |f| %>
  <%= render 'shared/error_messages', :target => @time_interval %>

  <p>
    <%= f.label :interval %><br />
    <%= f.text_field :interval %>
  </p>
  <p>
    <%= f.label :unit %><br />
    <%= f.text_field :unit %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @time_interval %> |
<%= link_to 'Back', time_intervals_path %>