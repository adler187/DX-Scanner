<% title 'Editing log' %>

<% form_for(@log) do |f| %>
  <%= render 'shared/error_messages', :target => @log %>
 <p>
    <%= f.label :tuner %>
    <%= collection_select(:log, :tuner_id, Tuner.all, :id, :full_name) %>
  </p>
  <p>
    <%= f.label :station %>
    <%= collection_select(:log, :station_id, Station.all(:order => 'callsign'), :id, :callsign) %>
  </p>
  <p>
    <%= f.label :signal_strength %><br />
    <%= f.text_field :signal_strength %>
  </p>
  <p>
    <%= f.label :signal_to_noise %><br />
    <%= f.text_field :signal_to_noise %>
  </p>
  <p>
    <%= f.label :signal_quality %><br />
    <%= f.text_field :signal_quality %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @log %> |
<%= link_to 'Back', logs_path %>