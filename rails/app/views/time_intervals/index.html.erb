<h1>Listing time_intervals</h1>

<table>
  <tr>
    <th>Interval</th>
    <th>Unit</th>
    <th>Description</th>
  </tr>

<% @time_intervals.each do |time_interval| %>
  <tr>
    <td><%=h time_interval.interval %></td>
    <td><%=h time_interval.unit %></td>
    <td><%=h time_interval.description %></td>
    <td><%= link_to 'Show', time_interval %></td>
    <td><%= link_to 'Edit', edit_time_interval_path(time_interval) %></td>
    <td><%= link_to 'Destroy', time_interval, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New time_interval', new_time_interval_path %>